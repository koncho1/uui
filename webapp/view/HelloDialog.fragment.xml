<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Dialog
		id="helloDialog"
		title="{i18n>dialogTitleText}"
		contentWidth="400px"
    	contentHeight="280px"

	>
		<content>
			<core:Icon
				src="sap-icon://information"
				size="8rem"
				class="sapUiMediumMargin"
			/>
			<Text id="description" width="40%" class="sapUiSmallMarginTop"/>
		</content>
		<beginButton>
			<Button
				text="{i18n>dialogCloseButtonText}"
				press=".onCloseDialog"
			/>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>
